title = {{Cistrome and Epicistrome Features Shape the Regulatory DNA Landscape}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/27203113 http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC4907330 http://linkinghub.elsevier.com/retrieve/pii/S0092867416304810},

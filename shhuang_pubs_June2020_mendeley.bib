pmid = {27811239},
title = {{A transcription factor hierarchy defines an environmental stress response network}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/27811239 http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC5217750 http://www.sciencemag.org/cgi/doi/10.1126/science.aag1550},
